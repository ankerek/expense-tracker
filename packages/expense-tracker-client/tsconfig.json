{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "target": "es5",
    "jsx": "react",
    "lib": ["es6", "es7", "dom", "esnext.asynciterable"],
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
      "@schema-types": ["schemaTypes.ts"],
      "@pages/*": ["pages/*"],
      "@core-components/*": ["core-components/*"],
      "@modules/*": ["modules/*"],
      "@apollo/*": ["apollo/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
